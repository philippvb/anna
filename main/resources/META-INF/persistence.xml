<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="MeineJpaPU" transaction-type="RESOURCE_LOCAL">

        <class>de.bfom.anna.business.file.entity.FileEntity</class>

        <properties>
            <property name="javax.persistence.jdbc.driver"    value="com.mysql.cj.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url"       value="jdbc:mysql://localhost:3306/hibernate_test" />
            <property name="javax.persistence.jdbc.user"      value="root" />
            <property name="javax.persistence.jdbc.password"  value="password" />
        </properties>
    </persistence-unit>

    <!-- important: set timezone in mysql to same as pc: SET @@global.time_zone = '+02:00'; (= Berlin) -->
</persistence>